<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SurveySDK" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SurveySDK" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/green</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/greenLight</item>
        <item name="android:tint">@color/green</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/green</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/green</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="ImageView" >
        <item name="android:tint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="Button" >
        <item name="android:tint">@color/green</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>
</resources>